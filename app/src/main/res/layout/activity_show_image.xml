<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowImageActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/image_9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:id="@+id/btn_back_BACK"
            android:layout_width="50dp"
            android:padding="7dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:alpha="0.6"
            android:layout_height="50dp"
            android:background="@drawable/bottom_nav" />
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="50dp"
                android:padding="10dp"
                android:id="@+id/btn_share_BACK"
                android:layout_marginEnd="20dp"
                android:alpha="0.6"
                android:layout_height="50dp"
                android:background="@drawable/bottom_nav" />
            <ImageView
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/btn_info_BACK"
                android:alpha="0.6"
                android:layout_height="50dp"
                android:background="@drawable/bottom_nav" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:padding="7dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_back_24"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="50dp"
                android:padding="10dp"
                android:id="@+id/btn_share"
                android:layout_marginEnd="20dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_share_24"/>
            <ImageView
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/btn_info"
                android:layout_height="50dp"
                android:src="@drawable/ic_info_24"/>

        </LinearLayout>

    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"

        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/btn_download_BACK"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/bottom_nav"
            android:padding="10dp"
            android:alpha="0.6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_set_img_BACK"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/btn_set_img_BACK"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/bottom_nav"
            android:padding="12dp"
            android:alpha="0.6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_download_BACK"
            app:layout_constraintRight_toLeftOf="@id/btn_popular_BACK"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/btn_popular_BACK"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/bottom_nav"
            android:padding="13dp"
            android:alpha="0.6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_set_img_BACK"
            app:layout_constraintRight_toLeftOf="@id/btn_like_BACK"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/btn_like_BACK"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/bottom_nav"
            android:padding="13dp"
            android:alpha="0.6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_popular_BACK"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/btn_download"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/baseline_arrow_circle_down_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_set_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/btn_set_img"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="12dp"
            android:src="@drawable/show_info_set"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_download"
            app:layout_constraintRight_toLeftOf="@id/btn_edit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/btn_edit"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="13dp"
            android:src="@drawable/show_info_popular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_set_img"
            app:layout_constraintRight_toLeftOf="@id/btn_like"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/btn_like"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="13dp"
            android:src="@drawable/bottom_icon_like"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_edit"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>